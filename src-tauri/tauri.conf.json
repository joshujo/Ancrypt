{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ancrypt",
  "version": "0.2.0",
  "identifier": "com.joshujo.ancrypt",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1871",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ancrypt",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 800
      }
    ],
    "security": {
      "csp": "connect-src 'none' script-src 'self' style-src 'self' frame-src 'none' object-src 'none' default-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
